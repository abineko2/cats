<%= provide(:title,"#{@user.name}さん") %>

<div id="show_user_head">
    <h1><%= "#{@user.name}さんページ" %></h1>
</div>
<!----------/コンテナ--------->
<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <div id="user_show_image">
                
            </div>
        </div>
        <div class="col-md-5">
            <div id="user_show_table">
            <table class="table table-bordered" id="user_table">
                <tr>
                    <th>オーナーさん名</th>
                    <td><%= @user.name %></td>
                </tr>
                 <tr>
                    <th>メールアドレス</th>
                    <td><%= @user.email %></td>
                </tr>
                <tr>
                    <th>登録猫ちゃん数</th>
                    <td></td>
                </tr>
                <tr>
                    <th>登録日</th>
                    <td><%= @user.created_at %></td>
                </tr>
            </table>
           
            <%= link_to "アカウント情報変更する",edit_user_path(@user),class:"btn btn-primary btn-block",style:"padding:40px",id:"edit_link" %>
         </div>    
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
<!----------/コンテナ--------->