<%= provide(:title,"#{@user.name}さん") %>

<div id="show_user_head" class="text-center text-primary">
    <h1>ｵｰﾅｰさんと猫ちゃんの個別ページ</h1>
</div>
<!----------/コンテナ1--------->
 <div id="user_area_show">
   <div class="container">
    <div class="row">
          <h1 style="letter-spacing:9px" id="show_h1"><%= "#{@user.name}さんページ" %></h1>
        <div class="col-md-6" >
            <div id="user_show_image" style="back-ground-color:#fff;">
                <%= image_tag(show_image_url(@user),size:"300x300") %>
            </div>
        </div>
        <div class="col-md-6">
            <div id="user_show_table">
            <table class="table table-bordered" id="user_table">
                <tr>
                    <th>オーナーさん名</th>
                    <td><%= @user.name %></td>
                </tr>
                 <tr>
                    <th>メールアドレス</th>
                    <td><%= @user.email %></td>
                </tr>
                <tr>
                    <th>登録猫ちゃん数</th>
                    <td></td>
                </tr>
                <tr>
                    <th>登録日</th>
                    <td><%= @user.created_at %></td>
                </tr>
            </table>
           
            <%= link_to "アカウント情報変更する",edit_user_path(@user),class:"btn btn-primary btn-block",style:"padding:20px",id:"edit_link" %>
         </div>    
        </div>
    </div>
    </div>
</div>
<!----------/コンテナ1--------->
<h1 id="cat_info">オーナー猫ちゃん情報</h1>

<div id="cat_area-show">
 <!----------コンテナ2-------------------------------> 
 <div class="container">
     <div class="row">
         <div class="col-md-12">
            <% if @cats.count == 0 %>
            
            <!--猫未登録-->
              <div id="none_cat_field">
                  <h3>まだ猫ちゃん登録されてません</h3>
              </div><br>
            <!--猫未登録-->
            <% else %>
              <div id="present_cat">
                  
              </div>
               <div style="text-align:center">
                   
              </div>
            <% end %>
            <div style="text-align:center"><%= link_to "新規猫ちゃん登録",cat_new_path(@user),class:"btn btn-primary btn-lg" %> </div>
         </div>
     </div>
 </div>
 <!----------コンテナ2------------------------------->  
</div>