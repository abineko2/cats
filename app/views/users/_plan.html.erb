<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
          <div class="text-primary text-center">
                <div style="text-align:center;">
                    <h5 class="modal-title" id="label1">
                 <%= "#{@cat.cat_name}ちゃんスケジュール" %>
              </h5></div>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button></div>
                </div>
            <div class="modal-body">
              <div id="new_plan">
          <h1>新規スケジュール作成</h1>
          <%= form_with(model:@schedule,url:plan_create_path,local:true) do |f| %>
             <%= render 'shared/schedule_error' %>
                   <% if @schedule.errors.any? %>
                       <style>#new_plan{padding:bottom:100px;}</style>
    　              <% end %>
            <%= f.label :"予定日" %>
            <%= f.date_field :plan_date,class:"form-control" %>
            
            <%= f.label :"内容" %>
            <%= f.text_area :plan_content,row:2,class:"form-control" %><br>
            <%= f.hidden_field :cat_id,value:@cat.id %>
            
            <div style="text-align:center">
                 <%= f.submit "登録",class:"btn btn-primary btn-block" %>
            </div>
           
          <% end %>
          
      </div>
            </div>
            </div>
        </div>
