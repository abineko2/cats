<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
          <div class="text-primary text-center">
                <div style="text-align:center;">
                    <h5 class="modal-title" id="label1">
                 <%= "#{@cat.cat_name}ちゃん編集" %>
              </h5></div>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button></div>
                </div>
            <div class="modal-body">
              <div class="row">
                  <%= form_with(model:@cat,url:cat_update_path(@cat),local:true,method: :patch) do |f| %>
                  <div class="col-md-6">
                    
                       <div id="modal_edit_image">
                           <%= image_tag(cat_show_image_url(@cat)) %>
                           <div class="input-group">
                             <label class="input-group-btn">
                                 <span class="btn btn-primary">
                                     写真選択<%= f.file_field :cat_image, style:"display:none" %>
                                 </span>
                             </label>
                             <input type="text" class="form-control" readOnly="true">
                         </div>
                       </div>
                       </div>
                         <div class="col-md-6">
                             <%= f.label :猫ちゃん名 %><span style="color:red;">*必須です</span>
                             <%= f.text_field :cat_name,class:"form-control" %><br>
                    
                             <%= f.label :猫ちゃん年齢 %><span style="color:blue;">*人間ベースで</span><span style="color:red;">*必須です</span>
                             <%= f.number_field :cat_age,class:"form-control",step:0,min:0 %><br>
                    
                             <%= f.label :猫ちゃん性別 %>
                             <%= f.select :cat_sex,[["オス","オス"],["メス","メス"]],{},class:"form-control" %><br>
                     
                             <%= f.label :猫ちゃん体重 %>(kg)<span style="color:red;">*必須です</span>
                            <%= f.number_field :cat_weight,class:"form-control",min:0.1,step:0.1 %>
                         </div><br>
                         <div  style="text-align:left" id="cat_update_sbmit">
                              <%= f.submit "変更",class:"btn btn-primary",style:"width:200px"; %>
                              <% end %>
                         </div>
                     
                 </div>
            </div>
        </div>
    </div>
