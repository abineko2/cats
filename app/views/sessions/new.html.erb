<% provide(:title, "login") %>

<div id="new_session_head">
 <h1>ログイン</h1>
</div>

<!--ログインメインエリア-->
<div id="new_login_area">

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

      <%= f.label :メールアドレス, class: "label-login fm" %>
      <%= f.email_field :email, class: 'form-control fm' %><br>

      <%= f.label :パスワード, class: "label-login fm" %>
      <%= f.password_field :password, class: 'form-control fm' %><br>
      
       <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
        <%= f.check_box :remember_me, id: "remember-me" %>
        <span>ログイン状態キープ</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
      
     
    <% end %>
  </div>
</div>

</div>
<div id="new_login_foot">
    <%= link_to "TOPへ",root_path,data: {"turbolinks" => false},class:"btn btn-default  btn-lg" %>
    <%= link_to "新規登録",new_user_path,class:"btn btn-primary btn-lg" %>
</div>    
<style>
    body{background-image:url("../back.png");background-color:pink;}
</style>