<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>実施日</th>
            <th>猫ちゃん名</th>
            <th>猫ちゃん体重</th>
            <th>理想体重</th>
            <th>結果</th>
        </tr>
    </thead>
    <tbody>
<!--猫複数処理-->        
        <% if params[:records]  %>
           <% @obj.each do |id,obj| %>
           <tr>
              <td><%= obj[:date] %></td>
             <td><%= obj[:name] %></td>
             <td><%= obj[:weight] %></td>
             <td><%= obj[:data_weight] %></td>
             <td><%= obj[:result] %></td>
           </tr>
         <!-- each 文終了-->  
          <% end %> 
<!--猫単体処理-->          
        <% else %>
          <tr>
              <td><%= @date %></td>
              <td><%= @cat.cat_name %></td>
              <td><%= @cat.cat_weight %></td>
              <td><%= @data_weight %></td>
              <td><%= @result %></td>
          </tr>
        <% end %>
    </tbody>
</table>

<style>
    table{background:#c0c0c0;}
    th{background:orange;}
</style>